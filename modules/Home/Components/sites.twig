
<div class="col-md-12">

    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Installed sites / api's</h3>
        </div>
        <!-- /.card-header -->
        <div class="card-body p-0">
            <table class="table">
                <thead>
                    <tr>
                        <th style="width:10px">#</th>
                        <th style="width:100px;">System id</th>
                        <th style="width:100px">Repository</th>
                        <th style="width:350px">Plugin name</th>
                        <th style="width:20px">Env</th>
                        <th>Url</th>

                        <th style="width: 40px">Settings</th>
                    </tr>
                </thead>
                <tbody>
                    {% for site in sites %}
                        {% for env in site.getSite().getEnvironments() %}
                            <tr>
                                <td>{{ loop.index }}.</td>
                                <td>
                                    <a href="/domain/{{ site.getSite().getSystemId() }}">
                                        {{ site.getSite().getSystemId() }}
                                    </a>
                                </td>
                                <td>
                                    {{ site.getRepositoryType().getType() }}
                                </td>
                                <td>
                                    {% if site.getRepositoryType().getType() == 'composer' %}
                                        <a target="_blank" href="https://packagist.org/packages/{{ site.getComposer().getName() }}">{{ site.getComposer().getName() }}</a>
                                    {% else %}
                                        {{ site.getComposer().getName() }}
                                    {% endif %}
                                </td>
                                <td>{{ env }}</td>
                                <td>
                                    <a target="_blank" href="{{ site.getSite().getDomain(env)['protocol'] }}://{{ site.getSite().getDomain(env)['domain'] }}">
                                        {{ site.getSite().getDomain('prod')['protocol'] }}://{{ site.getSite().getDomain(env)['domain'] }}
                                    </a>
                                </td>
                                <td>
                                    <a target="_blank" href="/site/{{ site.getSite().getDomain(env)['domain'] }}">
                                        Settings
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                    {% endfor %}
                </tbody>
            </table>
        </div>
        <!-- /.card-body -->
    </div>

